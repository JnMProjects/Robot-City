{
  "name": "noplus",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "webdev": "turbo dev:next dev:story --filter=noplus-web",
    "lint": "turbo lint",
    "next:web": "turbo dev:next --filter=noplus-web",
    "story:web": "turbo dev:story --filter=noplus-web",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "latest",
    "turbo": "^2.1.2"
  },
  "packageManager": "yarn@4.5.0",
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*"
  ]
}
